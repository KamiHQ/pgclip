<% provide(:title, "Queries") %>
<% @queries.each do |query| %>
  <%= link_to query do %>
    <div class="card">
      <paper-shadow z="1"></paper-shadow>
      <paper-ripple fit></paper-ripple>
      <div class="name">
        <%= query.name %>
      </div>
      <div class="queried_at">
        Last Updated <%= query.last_queried_at %>
      </div>
    </div>
  <% end %>
<% end %>

<br>

<%= link_to new_query_path, id:"add-button" do %>
  <paper-fab icon="add"></paper-fab>
<% end %>
